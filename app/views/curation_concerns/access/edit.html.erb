<h1>Manage Access Policy and Embargo for <%= curation_concern.ark %></h1>
<h2><%= curation_concern.title.first %></h2>

<%= simple_form_for @form, url: polymorphic_path([main_app, @form, :access]), html: { id: 'embargo-form' } do |f| %>

  <%= link_to "View this item",
              main_app.solr_document_path(@form.model),
              class: 'btn btn-primary' %>

  <%= link_to "View all embargos",
              main_app.embargoes_path,
              class: 'btn btn-info' %>

  <% if curation_concern.embargo %>
    <div class="embargo-notice"><span class="glyphicon glyphicon-lock"></span> EMBARGO: access policy is scheduled to change in the future</div>
  <% end %>

  <%= render "form_permission", f: f %>

  <%= button_tag "Delete Embargo",
                 id: 'remove_embargo_button',
                 class: 'btn btn-danger' %>

  <%= button_tag "Deactivate Embargo",
                 id: 'end_early_button',
                 class: 'btn btn-warning' %>

  <%= button_tag "Add Embargo",
                 id: 'add_embargo_button',
                 class: 'btn btn-warning' %>
  <%= f.submit "Save Changes", class: 'btn btn-success' %>
<% end %>
