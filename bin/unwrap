#!/bin/bash

set -e

cd "$(dirname "${BASH_SOURCE[0]}")/../"

for service in solr fcrepo; do
  if [[ ! -f "$service".pid ]]; then
    pid=$(cat "$service".pid)
    echo "ERROR: ${service}_wrapper is not running" >&2
    exit 1
  fi

  kill -15 "$(cat "$service".pid)" || true
  rm "$service".pid
done
